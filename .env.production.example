# Application
APP_NAME=FindFriend
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://findfriend.website

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database (PostgreSQL with PostGIS)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=findfriend_prod
DB_USERNAME=findfriend_user
DB_PASSWORD=your-secure-database-password

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=findfriend.website

# Broadcasting & WebSockets
BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# Cache
CACHE_STORE=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# Laravel Reverb (WebSocket Server)
REVERB_APP_ID=your-reverb-app-id
REVERB_APP_KEY=your-reverb-app-key
REVERB_APP_SECRET=your-reverb-app-secret
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=http

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@test.com"
MAIL_FROM_NAME="${APP_NAME}"
MAIL_ENCRYPTION=tls

# AWS (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite (Frontend build variables)
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${APP_URL}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="https"

# Mapbox (Map integration)
VITE_MAPBOX_TOKEN=your-mapbox-access-token

# Docker & Deployment
DOCKER_REGISTRY=ghcr.io/your-username
NGINX_PORT=80
NGINX_SSL_PORT=443

# GitHub Container Registry (for CI/CD)
GHCR_USERNAME=your-github-username
GHCR_TOKEN=your-github-token
